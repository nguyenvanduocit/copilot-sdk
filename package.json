{
  "name": "copilot-sdk",
  "version": "2.0.0",
  "description": "TypeScript SDK for directly calling GitHub Copilot API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nguyenvanduocit/copilot-sdk.git"
  },
  "homepage": "https://github.com/nguyenvanduocit/copilot-sdk#readme",
  "bugs": {
    "url": "https://github.com/nguyenvanduocit/copilot-sdk/issues"
  },
  "license": "MIT",
  "author": "nguyenvanduocit",
  "keywords": [
    "github",
    "copilot",
    "api",
    "sdk",
    "ai",
    "openai",
    "gpt",
    "claude",
    "typescript"
  ],
  "bin": {
    "copilot-auth": "./auth.ts"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "files": [
    "src",
    "dist",
    "auth.ts"
  ],
  "engines": {
    "node": ">=18"
  }
}
